<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/scanBtn"
        android:layout_width="137dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:layout_marginStart="140dp"
        android:layout_marginTop="73dp"
        android:layout_marginEnd="133dp"
        android:layout_marginBottom="195dp"
        android:backgroundTint="#0F9D58"
        android:text="выбрать" />

    <Button
        android:id="@+id/button_for_tests"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:layout_marginStart="78dp"
        android:layout_marginEnd="75dp"
        android:layout_marginBottom="27dp"
        android:text="тестовая кнопка для отладки" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <RadioButton
            android:id="@+id/radio_one"
            android:minHeight="48dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="CheckButton"
            android:text="Исследование грибков"
            android:checked="true"/>

        <RadioButton
            android:id="@+id/radio_two"
            android:minHeight="48dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="CheckButton"
            android:text="Исследование листиков"/>

        <RadioButton
            android:id="@+id/radio_three"
            android:minHeight="48dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="CheckButton"
            android:text="Исследование букашек" />


    </RadioGroup>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="365dp"
        android:layout_height="123dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="21dp"
        android:layout_marginBottom="525dp"
        android:text="Выберите исследование"
        android:textColor="#482587"
        android:textSize="30sp"
        android:visibility="visible" />

</RelativeLayout>